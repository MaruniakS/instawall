<div class="modal-body row">
  <div class="col-md-9">
    <div class = "panel panel-default">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Photos
        </h3>
      </div>
      <div class = "panel-body" id = "main-panel">
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Search  <span class="glyphicon glyphicon-search"></span>

        </h3>
      </div>
      <div class = "panel-body" id = "main-panel">
        <%= form_for :person do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :first_name, class: 'form-control', placeholder: 'Hashtags' %>
                    <span class="input-group-btn">
                     <%= f.submit 'Find', class: 'btn btn-primary', style: 'float: right' %>
                    </span>
              </div>
              <span class="help-block">Enter one or more hashtags</span>
            </div>
        <% end %>
      </div>
    </div>


    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Your hashtags history
        </h3>
      </div>
      <div class = "panel-body" id = "main-panel">

      </div>
    </div>

  </div>
</div>

