<div class="modal-body row">
  <div class="col-md-9">
    <div class = "panel panel-default">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Photos
        </h3>
      </div>
      <div class = "panel-body" id = "main-panel">
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Search  <span class="glyphicon glyphicon-search"></span>

        </h3>
      </div>
      <div class = "panel-body" id = "search-panel">
        <%= form_for :hashtag do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :hash, class: 'form-control', placeholder: 'Hashtags' %>
                    <span class="input-group-btn">
                     <%= f.submit 'Find', class: 'btn btn-primary', style: 'float: right' %>
                    </span>
              </div>
              <span class="help-block">Enter one or more hashtags</span>
            </div>
        <% end %>
      </div>
    </div>


    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          <% if user_signed_in? %>
            Your hashtags history
          <% else %>
            Popular hashtags
          <% end %>
        </h3>
      </div>
      <div class = "panel-body" id="history-panel">
        <% if user_signed_in? %>
            <ul>
              <% current_user.hashtags.order(:count => :desc).each do |h| %>
                <li>
                  <%= h.hash %>
                </li>
              <% end %>
            </ul>
        <% else %>
            <ul>
              <% Hashtag.order(:count => :desc).each do |h| %>
                  <li>
                    <%= h.hash %>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

  </div>
</div>

