<div class="modal-body row">
  <div class="col-md-9">
    <div class = "panel panel-default">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Photos
        </h3>
      </div>
      <div class = "panel-body" id = "photos-panel" style="text-align: center">
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Search  <span class="glyphicon glyphicon-search"></span>

        </h3>
      </div>
      <div class = "panel-body" id = "search-panel">
         <div class="form-group">
           <div class="input-group">
             <input type="text" id="hash-input" class = "form-control", placeholder="Hashtags"/>
                <span class="input-group-btn">
                  <input value="Find" id="srch-btn" type="button" class="btn btn-primary" />
                 </span>
              </div>
            <span class="help-block">Enter one or more hashtags</span>
         </div>
      </div>
    </div>

    <% if user_signed_in? %>
        <div class = "panel panel-info">
            <div class = "panel-heading">
                <h3 class = "panel-title">
                    Your hashtags history
                </h3>
            </div>
            <div class = "panel-body" id="user-history-panel">
                <ul>
                    <% current_user.tags.order(:created_at => :desc).each do |h| %>
                        <li >
                            <button class="btn btn-link btn-tag" style="padding: 0px">
                                <%=  h.name %>
                            </button>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>

    <div class = "panel panel-info">
      <div class = "panel-heading">
        <h3 class = "panel-title">
          Popular hashtags
        </h3>
      </div>
      <div class = "panel-body" id="hashtags-history-panel">
        <ul>
          <% Tag.order(:count => :desc).each do |h| %>
              <li >
                <button class="btn btn-link btn-tag" style="padding: 0px">
                  <%=  h.name %>
                </button>
              </li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
</div>

<style>
    .photos{
        height: 600px;
        width: 600px;
        margin-top: 20px;
    }
</style>

